<%
  guide.reload if development?
  @page_title = 'Changes'
  @menu_path = '/menu/changes'
%>


<div class="prose">

  <h1>Changes</h1>

  <p>This project mostly adheres to <a href="http://semver.org/">Semantic Versioning</a>.</p>

  <p>
    Select a version below to retrieve a detailed list of changes.
  </p>

  <table>
    <tr>
      <th>Version</th>
      <th>Release date</th>
    </tr>
    <% guide.releases.each do |release| %>
      <tr>
        <td>
          <b><a href="/changes/<%= release.version %>"><%= release.version %></a></b>
        </td>
        <td>
          <% if release.date %>
            <%= release.date.strftime("%B %d, %Y") %>
          <% end %>
        </td>
      </tr>
    <% end %>

  </table>

</div>
